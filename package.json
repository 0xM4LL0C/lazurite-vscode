{
    "name": "lazurite",
    "displayName": "Lazurite-vscode",
    "description": "",
    "version": "1.1.0",
    "engines": {
        "vscode": "^1.91.0"
    },
    "publisher": "HamletSargsyan",
    "icon": "./assets/icon.png",
    "repository": {
        "url": "https://github.com/HamletSargsyan/lazurite-vscode"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "Lazurite",
        "lazurite",
        "programming language",
        "snippets",
        "syntax highlighting"
    ],
    "capabilities" : {
        "hoverProvider" : "true"
    },
    "contributes": {
        "menus": {
            "editor/title": [
                {
                    "command": "lazurite.runFile",
                    "when": "resourceExtname == .lzr",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "title": "run file",
                "command": "lazurite.runFile",
                "icon": "$(run)"

            }
        ],
        "configuration": {
            "type": "object",
            "title": "lazurite",
            "properties": {
                "lazurite.jarPath": {
                    "type": "string",
                    "default": "",
                    "description": "Lazurite jar path"
                }
            }
        },
        "languages": [
            {
                "id": "lazurite",
                "aliases": [
                    "Lazurite",
                    "lazurite"
                ],
                "extensions": [
                    ".lzr"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./assets/icon.svg",
                    "dark": "./assets/icon.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "lazurite",
                "scopeName": "source.lazurite",
                "path": "./syntaxes/lazurite.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lazurite",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "activationEvents": [],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@eslint/js": "9.11.0",
        "@types/mocha": "10.0.8",
        "@types/node": "22.5.5",
        "@types/vscode": "1.93.0",
        "@typescript-eslint/eslint-plugin": "8.6.0",
        "@typescript-eslint/parser": "8.6.0",
        "@vscode/test-cli": "0.0.10",
        "@vscode/test-electron": "2.4.1",
        "eslint": "9.11.0",
        "globals": "15.9.0",
        "typescript": "5.6.2",
        "typescript-eslint": "8.6.0"
    }
}
