{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "lazurite",

    "scopeName": "source.lazurite",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#loops"
        },
        {
            "include": "#conditions"
        },
        {
            "include": "#switch"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.lazurite",
                    "match": "\\b(func|if|else|while|for|switch|return|case|default|and|or|using|new|class|define|include|try|catch|throw)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.lazurite",
                    "match": "[-+*/=<>`]"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.lazurite",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "constant.string.lazurite",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.lazurite",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.parameter.lazurite",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.lazurite",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.lazurite",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "patterns": [
                        {
                            "include": "#comments"
                        }
                    ]
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.lazurite",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\()"
                }
            ]
        },        
        
        "loops": {
            "patterns": [
                {
                    "name": "meta.loop.lazurite",
                    "begin": "\\b(while|for)\\b",
                    "end": "{",
                    "patterns": [
                        {
                            "include": "#variables"
                        }
                    ]
                }
            ]
        },
        "conditions": {
            "patterns": [
                {
                    "name": "meta.condition.lazurite",
                    "begin": "\\bif\\b",
                    "end": "{",
                    "patterns": [
                        {
                            "include": "#variables"
                        }
                    ]
                }
            ]
        },
        "switch": {
            "patterns": [
                {
                    "name": "meta.switch.lazurite",
                    "begin": "\\bswitch\\b",
                    "end": "{",
                    "patterns": [
                        {
                            "include": "#variables"
                        }
                    ]
                }
            ]
        },
        "case": {
            "patterns": [
                {
                    "name": "meta.case.lazurite",
                    "begin": "\\bcase\\b",
                    "end": "{",
                    "patterns": [
                        {
                            "include": "#variables"
                        }
                    ]
                }
            ]
        }
    }
}
